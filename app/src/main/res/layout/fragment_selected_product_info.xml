<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#F9FBFE">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow_foood"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/ttcommons_demibold"
            android:text="Продукты"
            android:textColor="#231F20"
            android:textSize="20sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_recycler_view">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-3dp"
        android:src="@drawable/ic_bookmark"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"/>
    <LinearLayout
        android:id="@+id/linear_layout_clicable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageOfProduct"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:id="@+id/title_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#231F20"
                android:textSize="16sp"
                android:fontFamily="@font/ttcommons_medium"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/body_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#231F20"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:fontFamily="@font/ttcommons_light"
                android:ellipsize="end"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#231F20"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/ttcommons_medium"
                />
            <TextView
                android:id="@+id/price_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#231F20"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:fontFamily="@font/ttcommons_demibold"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/minus_one"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_minus_circle"
            android:padding="12dp"
            android:background="@drawable/add_item_left_corner"

            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/minus_ten"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="#FFAC37"
            android:textSize="16sp"
            android:gravity="center"
            android:text="-10"

            android:textColor="#FFFFFF"
            android:fontFamily="@font/ttcommons_bold"/>
        <TextView
            android:id="@+id/count_of_items"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9D33"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ttcommons_demibold"/>
        <TextView
            android:id="@+id/plus_ten"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="#FFAC37"
            android:textSize="16sp"
            android:gravity="center"
            android:text="+10"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ttcommons_bold"/>
        <ImageView
            android:id="@+id/image_plus"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_plus_circle"
            android:padding="12dp"
            android:background="@drawable/add_item_right_corner"
            />

    </LinearLayout>
<ImageView
    android:layout_width="214dp"
    android:layout_height="124dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/barcode"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"
    />

</LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>